server eduroam {
	listen {
		type = "auth"
		# Only IPv4 in Docker
		ipv4addr = *
		# No IPv6 in Docker
		#ipv6addr = ::
		port = 1812
	}

	authorize {
		filter_username

		#preprocess

		# if you want detailed logging
		auth_log
		#suffix

		# Needed for EAP-TLS
		eap {
			ok = return
		}
	}

	authenticate {
		# Only allow EAP
		eap
	}

	post-auth {
		# Log all replies we send
		reply_log
		# Only log some replies we send
		#Post-Auth-Type REJECT {
		#	reply_log
		#}
	}
}
